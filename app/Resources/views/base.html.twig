{% if is_granted('ROLE_MAYOR') %}
    {% set idMayor = app.user.mayor.id %}
{% elseif is_granted('ROLE_PARTNER') %}
    {% set idPartner = app.user.partner.id %}
{% endif %}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}{% endblock %} - Wiki des Maires</title>
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
    {% include 'components/head.html.twig' %}
    {% block stylesheets %}{% endblock %}
</head>
<body>
<header>
    {% include 'components/header.html.twig' %}
</header>
<nav id="navbar">
    {% block navbar %}
        {% include 'components/navbar.html.twig' %}
    {% endblock %}
</nav>
<a href="#">
    <div class="scrollUp"><i class="fa fa-angle-up"></i></div>
</a>
<section>
    <div class="container">
        <div class="content">
            {% block body %}
            {% endblock %}
        </div>
    </div>
</section>
{% for message in app.flashes('notice') %}
    <div class="notice">
        <div class="notif">
            {{ message|raw }}
        </div>
    </div>
{% endfor %}
<footer class="page-footer">
    {{ render(controller(
    'AppBundle:Layout:footer'
    )) }}
</footer>
{% include 'components/script.html.twig' %}
{% block javascripts %}{% endblock %}
</body>
{% include 'components/modalConnect.html.twig' %}
</html>
