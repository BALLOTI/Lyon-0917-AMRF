{% extends 'base.html.twig' %}
{% block title %}Contact{% endblock %}
{% block body %}
    {{ form_start(form) }}

    <h2>Contact</h2>
    <h3>Par téléphone</h3>
    <div class="jumbotron">

        Association des Maires Ruraux de France<br />
        52, avenue Maréchal Foch<br />
        69006 – LYON<br />
       <strong>04 37 43 39 80</strong>
        </p>

    </div>
    <h3>Ou envoyez-nous un message</h3>
    <div class="jumbotron">

            <div class="row">
                <div class="form-group col-sm-6">
                    {{ form_label(form.name, "Nom *") }}
                    {{ form_widget(form.name) }}
                    {{ form_errors(form.name) }}

                </div>
                <div class="form-group col-sm-6">
                    {{ form_label(form.firstName, "Prénom *") }}
                    {{ form_widget(form.firstName) }}
                    {{ form_errors(form.firstName) }}

                </div>
                <div class="form-group col-sm-6">
                    {{ form_label(form.email, "Email *") }}
                    {{ form_widget(form.email) }}
                    {{ form_errors(form.email) }}

                </div>
                <div class="form-group col-sm-6">
                    {{ form_label(form.phone, "Téléphone *") }}
                    {{ form_widget(form.phone) }}
                    {{ form_errors(form.phone) }}

                </div>
                <div class="col-sm-6">
                    {{ form_label(form.statut, "Je suis... *") }}
                    {{ form_widget(form.statut) }}
                    {{ form_errors(form.statut) }}
                </div>
                <div class="col-sm-6">
                    {{ form_label(form.subject, "Objet *") }}
                    {{ form_widget(form.subject) }}
                    {{ form_errors(form.subject) }}

                </div>
            </div>
            <br>
            <div class="row">
                <div class="col-xs-12">
                    {{ form_label(form.message, "Message *") }}
                    {{ form_widget(form.message, {'attr': {
                        'rows':'7'} }) }}
                    {{ form_errors(form.message) }}

                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <em>* Champs obligatoires</em>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-9">
                    <div class="g-recaptcha text-right" data-sitekey="6LfGgDYUAAAAAFiNhfvLiy-5WjYs-EbLy6kN1PjA"></div>
                </div>
                <div class="col-xs-3">
                    <button type="submit" id="submit" name="submit" class="btn btn-primary pull-right">Envoyer</button>

                </div>
            </div>

    </div>
    {{ form_widget(form._token) }}
    {{ form_end(form) }}
{% endblock %}
{% block javascripts %}
    <script src='https://www.google.com/recaptcha/api.js'></script>
{% endblock %}
