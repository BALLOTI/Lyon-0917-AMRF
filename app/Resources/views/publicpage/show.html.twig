{% extends 'AMRFPublicRooterBundle::private/admin/baseAdmin.html.twig' %}

{% block body %}
    <h1>Publicpage</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ publicPage.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ publicPage.name }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if publicPage.date %}{{ publicPage.date|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ publicPage.content }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_publicpage_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_publicpage_edit', { 'id': publicPage.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
