{% extends 'private/admin/baseAdmin.html.twig' %}

{% block body %}
    <div class="menu-admin menu-company">
        <ul>
            <li>
                <a href="{{ path('admin_company_index') }}" data-toggle="tooltip" data-placement="right"
                   title="Liste Organisme"><i class="fa fa-archive fa-admin"></i></a>
            </li>
            <li>
                <a href="{{ path('admin_company_new') }}" data-toggle="tooltip" data-placement="right"
                   title="Nouveau Organisme"><i
                            class="fa fa-plus fa-admin"></i></a>
            </li>
            <li class="submitForm">
                <a data-toggle="tooltip" data-placement="right"
                   title="Nouvel Organisme"><i class="fa fa-check fa-admin"></i></a>
            </li>
            <li>
                {{ form_start(delete_form) }}
                <button class="fa-admin" data-toggle="tooltip" data-placement="right"
                        title="Supprimer Organisme" type="submit"><i class="fa fa-trash-o"></i></button>
                {{ form_end(delete_form) }}

            </li>
        </ul>
    </div>
    <h1>Company</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ company.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ company.name }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ company.slug }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ company.address }}</td>
            </tr>
            <tr>
                <th>Zipcode</th>
                <td>{{ company.zipCode }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ company.city }}</td>
            </tr>
            <tr>
                <th>Activities</th>
                <td>
                    {% if company.activities %}
                        {% for activity in company.activities %}
                            <span class="label label-primary"> {{ activity.name }}</span>
                        {% endfor %}
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Presentation</th>
                <td>{{ company.presentation }}</td>
            </tr>
            <tr>
                <th>Logo</th>
                <td>{{ company.logo }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ company.url }}</td>
            </tr>
            <tr>
                <th>Facebook</th>
                <td>{{ company.facebook }}</td>
            </tr>
            <tr>
                <th>Linkedin</th>
                <td>{{ company.linkedin }}</td>
            </tr>
            <tr>
                <th>Twitter</th>
                <td>{{ company.twitter }}</td>
            </tr>
            <tr>
                <th>Contactfirstname</th>
                <td>{{ company.contactFirstName }}</td>
            </tr>
            <tr>
                <th>Contactlastname</th>
                <td>{{ company.contactLastName }}</td>
            </tr>
            <tr>
                <th>Contactphone</th>
                <td>{{ company.contactPhone }}</td>
            </tr>
            <tr>
                <th>Contactemail</th>
                <td>{{ company.contactEmail }}</td>
            </tr>
        </tbody>
    </table>

{% endblock %}
