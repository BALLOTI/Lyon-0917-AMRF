{% extends 'private/admin/baseAdmin.html.twig' %}

{% block body %}
    <h1>Companies list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Address</th>
                <th>Zipcode</th>
                <th>City</th>
                <th>Activities</th>
                <th>Presentation</th>
                <th>Logo</th>
                <th>Url</th>
                <th>Facebook</th>
                <th>Linkedin</th>
                <th>Twitter</th>
                <th>Contactfirstname</th>
                <th>Contactlastname</th>
                <th>Contactphone</th>
                <th>Contactemail</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for company in companies %}
            <tr>
                <td><a href="{{ path('admin_company_show', { 'id': company.id }) }}">{{ company.id }}</a></td>
                <td>{{ company.name }}</td>
                <td>{{ company.address }}</td>
                <td>{{ company.zipCode }}</td>
                <td>{{ company.city }}</td>
                <td>
                    {% if company.activities %}
                        {% for activity in company.activities %}
                            <span class="label label-primary"> {{ activity.name }}</span>
                        {% endfor %}
                    {% endif %}
                </td>
                <td>{{ company.presentation }}</td>
                <td>{{ company.logo }}</td>
                <td>{{ company.url }}</td>
                <td>{{ company.facebook }}</td>
                <td>{{ company.linkedin }}</td>
                <td>{{ company.twitter }}</td>
                <td>{{ company.contactFirstName }}</td>
                <td>{{ company.contactLastName }}</td>
                <td>{{ company.contactPhone }}</td>
                <td>{{ company.contactEmail }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_company_show', { 'id': company.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_company_edit', { 'id': company.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_company_new') }}">Create a new company</a>
        </li>
    </ul>
{% endblock %}
