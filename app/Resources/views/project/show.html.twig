{% extends 'private/admin/baseAdmin.html.twig' %}

{% block body %}
    <div class="menu-admin menu-project">
        <ul>
            <li>
                <a href="{{ path('admin_project_index') }}" data-toggle="tooltip" data-placement="right"
                   title="Liste Projets"><i class="fa fa-archive fa-admin"></i></a>
            </li>
            <li>
                <a href="{{ path('admin_project_new') }}" data-toggle="tooltip" data-placement="right"
                   title="Nouveau Projet"><i
                            class="fa fa-plus fa-admin"></i></a>
            </li>
            <li class="submitForm">
                <a data-toggle="tooltip" data-placement="right"
                   title="Nouvel Utilisateur"><i class="fa fa-check fa-admin"></i></a>
            </li>
            <li>
                {{ form_start(delete_form) }}
                <button class="fa-admin" data-toggle="tooltip" data-placement="right"
                        title="Supprimer l'Utilisateur" type="submit"><i class="fa fa-trash-o"></i></button>
                {{ form_end(delete_form) }}

            </li>
        </ul>
    </div>
    <h1>Project</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ project.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ project.title }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ project.slug }}</td>
            </tr>
            <tr>
                <th>Thème</th>
                <td>
                    {% for theme in project.themes %}
                        <span class="label label-primary">{{ theme.name }}</span>
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Creationdate</th>
                <td>{% if project.creationDate %}{{ project.creationDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updatedate</th>
                <td>{% if project.updateDate %}{{ project.updateDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>
                    {% for img in project.images %}
                        <img src="{{ img }}" alt="" width="50px">
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Date du projet</th>
                <td>{% if project.projectDate %}{{ project.projectDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Durée du projet</th>
                <td>{{ project.projectDuration }}</td>
            </tr>
            <tr>
                <th>Coût du projet</th>
                <td>{{ project.projectCost }}</td>
            </tr>
            <tr>
                <th>Financement</th>
                <td>{{ project.projectCoFinance }}</td>
            </tr>
            <tr>
                <th>Résumé</th>
                <td>{{ project.descResume }}</td>
            </tr>
            <tr>
                <th>Contexte</th>
                <td>{{ project.descContext }}</td>
            </tr>
            <tr>
                <th>Objectifs</th>
                <td>{{ project.descGoal }}</td>
            </tr>
            <tr>
                <th>Déroulement</th>
                <td>{{ project.descProgress }}</td>
            </tr>
            <tr>
                <th>Partenaires mobilisés</th>
                <td>{{ project.descPartners }}</td>
            </tr>
            <tr>
                <th>Résultats obtenus</th>
                <td>{{ project.descResults }}</td>
            </tr>
            <tr>
                <th>Difficultés rencontrées</th>
                <td>{{ project.descDifficulties }}</td>
            </tr>
            <tr>
                <th>Conseils</th>
                <td>{{ project.descAdvices }}</td>
            </tr>
            <tr>
                <th>Contact nom</th>
                <td>{{ project.contactName }}</td>
            </tr>
            <tr>
                <th>Contact poste</th>
                <td>{{ project.contactOccupation }}</td>
            </tr>
            <tr>
                <th>Contact email</th>
                <td>{{ project.contactEmail }}</td>
            </tr>
            <tr>
                <th>Contact téléphone</th>
                <td>{{ project.contactPhone }}</td>
            </tr>
            <tr>
                <th>File</th>
                <td>{{ project.file }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ project.url }}</td>
            </tr>
            <tr>
                <th>Youtube</th>
                <td>{{ project.youtube }}</td>
            </tr>
            <tr>
                <th>Facebook</th>
                <td>{{ project.facebook }}</td>
            </tr>
            <tr>
                <th>Twitter</th>
                <td>{{ project.twitter }}</td>
            </tr>
            <tr>
                <th>Keywords</th>
                <td>
                    {% for keyword in project.keywords %}
                        <span class="label label-primary">{{ keyword.name }}</span>
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_project_index') }}">Retour à la liste</a>
        </li>
        <li>
            <a href="{{ path('admin_project_edit', { 'slug': project.slug }) }}">Edition</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
