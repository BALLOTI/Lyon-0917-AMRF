{% extends 'AMRFPublicRooterBundle::base.html.twig' %}
{% block title %}A propos{% endblock %}
{% block body %}
    <h2>Recherche</h2>
    <form action="" method="post">
        <div class="jumbotron">
            <div class="input-group col-md-12">
                <input type="text" class="search form-control" placeholder="Recherche une fiche projet"/>
                <span class="input-group-addon">
                    <button type="submit" class="btn btn-search"><i class="fa fa-search"></i></button>
                        </span>

            </div>


        </div><!--end jumbotron-->
        <h2>Recherche Avancée</h2>
        <div class="jumbotron">
            <h3 class="control-label text-center">Choisir une thématique</h3><br>
            {% include 'AMRFPublicRooterBundle::components/thematiques.html.twig' %}
            <div class="row">

                <div class="col-md-12">
                    <h3 class="text-center">Mots-clefs</h3><br>
                    <div class="form-group">
                        <input type="text" max="5" class="motsCle form-control" name="motsCle" id="motsCle">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 form-group">
                    <label for="communes">Departement</label>
                    <input type="text" class="form-control" name="communes" id="communes">
                </div>
                <div class="col-md-6 form-group">
                    <label for="codep">Code Postal</label>
                    <input class="form-control" id="codep" type="text"/>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 text-center">
                    <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i> Recherche</button>
                </div>
            </div>
        </div><!--end jumbotron-->
    </form>

    {% include 'AMRFPublicRooterBundle::components/resumeProject.html.twig' %}

{% endblock %}