{% extends 'AMRFPublicRooterBundle::base.html.twig' %}
{% block title %}Recherche{% endblock %}
{% block body %}
    <h2>Recherche</h2>
    <form action="" method="post">
        <div class="jumbotron">
            <div class="input-group col-md-12">
                <input type="text" class="search form-control" placeholder="Recherche une fiche projet"/>
                <span class="input-group-addon">
                    <button type="submit" class="btn btn-search"><i class="fa fa-search"></i></button>
                </span>
            </div>
        </div><!--end jumbotron-->
        <div class="jumbotron">
            <h3 class="text-center">Choisir une th√©matique</h3>
            {% include 'AMRFPublicRooterBundle::components/thematiques.html.twig' %}
            <div class="row">
                <div class="col-md-12 ui-widget">
                    <label for="motsCle" class="text-center">Mots-clefs</label><br>
                    <input type="text" max="5" class="motsCle form-control" name="motsCle" id="motsCle">
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 col-md-offset-1 text-center">
                    <label for="communes">Departement</label>
                    <input type="text" class="form-control" name="communes" id="communes">
                </div>
                <div class="col-md-4 col-md-offset-2 form-group text-center">
                    <label for="codep">Code Postal</label>
                    <input class="form-control" id="codep" type="text"/>
                </div>
                <div class="col-md-12 text-center">
                    <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i> Recherche</button>
                </div>
            </div>
        </div><!--end jumbotron-->
        <div class="jumbotron">
            <h3 class="text-center">Localiser un projet</h3>
            <iframe width="100%" height="350" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"
                    src="http://www.openstreetmap.org/export/embed.html?bbox=-4.932861328125001%2C43.59630591596551%2C9.569091796875002%2C50.00067775723633&amp;layer=mapnik"
                    style="border: 1px solid black"></iframe>
            <br/>
            <small><a href="http://www.openstreetmap.org/#map=7/46.894/2.318">Afficher une carte plus grande</a></small>
        </div>
    </form>

    {% include 'AMRFPublicRooterBundle::components/resumeProject.html.twig' %}
{% endblock %}