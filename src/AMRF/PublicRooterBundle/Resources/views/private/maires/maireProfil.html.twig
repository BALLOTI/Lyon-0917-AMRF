{% extends 'AMRFPublicRooterBundle::base.html.twig' %}
{% block title %}Mon profil{% endblock %}
{% block navbar %}
    {% include 'AMRFPublicRooterBundle::components/navbarMaire.html.twig' %}
{% endblock %}
{% block body %}
    <h2>Mon profil</h2>
    <!-- Nav tabs -->
    <div class="row tabPannel">
        <form action="">
            <ul class="list-inline text-center" role="tablist">
                <li role="presentation" class="active">
                    <a href="#profil" aria-controls="profil" role="tab" data-toggle="tab">Mon Profil</a>
                </li>
                <li role="presentation">
                    <a href="#mairie" aria-controls="mairie" role="tab" data-toggle="tab">Ma Mairie</a>
                </li>
                <li role="presentation">
                    <a href="#reseau" aria-controls="reseau" role="tab" data-toggle="tab">Reseaux Sociaux</a>
                </li>
                <li role="presentation">
                    <a href="#settings" aria-controls="settings" role="tab" data-toggle="tab">Mot de Passe</a>
                </li>
            </ul>

            <!-- Tab panes -->
            <div class="tab-content">


                <div role="tabpanel" class="tab-pane active" id="profil">

                    <h3>Mon profil</h3>
                    <div class="col-lg-6 col-md-6">
                        <div class="form-group">
                            <label for="lastName">Nom *</label>
                            <input id="lastName" type="text" class="form-control">
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6">
                        <div class="form-group">
                            <label for="firstName">Prénom *</label>
                            <input id="firstName" type="text" class="form-control">
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6">
                        <div class="form-group">
                            <label for="tel">Téléphone *</label>
                            <input id="tel" type="number" class="form-control">
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6">
                        <div class="form-group">
                            <label for="email">Email *</label>
                            <input id="email" type="email" class="form-control">
                        </div>
                    </div>

                </div>

                <div role="tabpanel" class="tab-pane" id="mairie">

                    <h3>Ma Mairie</h3>
                    <div class="col-lg-6 col-md-6">
                        <div class="form-group">
                            <label for="commune">Commune *</label>
                            <input type="text" id="commune" class="form-control">
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6">
                        <div class="form-group">
                            <label for="codep">Code Postal *</label>
                            <input id="codep" type="number" class="form-control">
                        </div>
                    </div>
                    <div class="col-lg-12 col-md-12">
                        <div class="form-group">
                            <label for="address">Adresse de la Mairie *</label>
                            <input id="address" type="text" class="form-control">
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6">
                        <div class="form-group">
                            <label for="habitants">Nombre d'habitants</label>
                            <input id="habitants" type="number" class="form-control">
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6">
                        <div class="form-group">
                            <label for="insee">Numéro INSEE</label>
                            <input disabled value="NOT EDITABLE" id="insee" type="number" class="form-control">
                        </div>
                    </div>

                </div>
                <div role="tabpanel" class="tab-pane" id="reseau">


                    <h3>Reseaux Sociaux</h3>
                    <div class="col-lg-6 col-md-6">
                        <div class="form-group">
                            <label for="website">Site Internet</label>
                            <input id="website" type="text" class="form-control">
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6">
                        <div class="form-group">
                            <label for="facebook">Compte Facebook</label>
                            <input id="facebook" type="text" class="form-control">
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6">
                        <div class="form-group">
                            <label for="google">Compte Google+</label>
                            <input id="google" type="text" class="form-control">
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6">
                        <div class="form-group">
                            <label for="twitter">Compte Twitter</label>
                            <input id="twitter" type="text" class="form-control">
                        </div>
                    </div>

                </div>
                <div role="tabpanel" class="tab-pane" id="settings">

                    <h3>Changer mon mot de passe</h3>
                    <div class="col-lg-4 col-md-4">
                        <div class="form-group">
                            <label for="oldpsw">Ancien mot de passe</label>
                            <input name="oldpsw" type="password" class="form-control" data-error="wrong"
                                   data-success="right">
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4">
                        <div class="form-group">
                            <label for="password">Nouveau mot de passe</label>
                            <input name="newPass[]" type="password" class="form-control" data-error="wrong"
                                   data-success="right">
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4">
                        <div class="form-group">
                            <label for="password">Confirmation</label>
                            <input type="password" name="newPass[]" class="form-control" data-error="wrong"
                                   data-success="right">
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-12 col-md-12 text-center">
                <button class="btn" type="submit">Sauvegarder</button>
            </div>
        </form>
    </div>

{% endblock %}
