{% extends 'AMRFPublicRooterBundle::base.html.twig' %}
{% block title %}Mes projets{% endblock %}
{% block navbar %}
    {% set options = {'status':1} %}
    {% include 'AMRFPublicRooterBundle::components/navbar.html.twig' with options %}
{% endblock %}
{% block body %}
    <h2>MES FICHES PROJETS</h2>
    <div class="row tabPannel">
        <div class="hidden-xs">
            <ul class="list-inline text-center" role="tablist">
                <li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab"
                                                          data-toggle="tab">En cours de saisie</a></li>
                <li role="presentation"><a href="#envoye" aria-controls="projet" role="tab" data-toggle="tab">Envoyé(s)</a>
                </li>
                <li role="presentation"><a href="#ligne" aria-controls="projet" role="tab" data-toggle="tab">En
                        ligne</a>
                </li>
            </ul>
        </div>
        <!-- Tab panes -->
        <div class="hidden-xs tab-content">
            <div role="tabpanel" class="tab-pane active" id="home">
                <h3>Mes projets en cours de saisie</h3>
                <div class="jumbotron">
                    {% set options = {'thema':'false','pictures':'false','update': 'true', 'more': 'true', 'id': 1, 'text': 0} %}
                    {% include 'AMRFPublicRooterBundle::components/resumeProject.html.twig' with options %}
                </div>
            </div>
            <div role="tabpanel" class="tab-pane" id="envoye">
                <h3>Mes projets envoyé</h3>
                <div class="jumbotron">
                    {% set options = {'thema':'false','pictures':'false','update': 'true', 'more': 'true', 'text': 0} %}
                    {% include 'AMRFPublicRooterBundle::components/resumeProject.html.twig' with options %}
                </div>
            </div>
            <div role="tabpanel" class="tab-pane" id="ligne">
                <h3>Mes projets en ligne</h3>
                <div class="jumbotron">
                    {% set options = {'thema':'false','pictures':'false','update': 'true', 'more': 'true', 'text': 0} %}
                    {% include 'AMRFPublicRooterBundle::components/resumeProject.html.twig' with options %}
                </div>
            </div>
        </div>

        {#Swiper#}
        <div class="visible-xs swiper-container">
            <div class="swiper-pagination"></div>
            <div class="swiper-wrapper">
                <div class="swiper-slide">
                    <h3>Mes projets en cours de saisie</h3>
                    <div class="jumbotron">
                        {% set options = {'thema':'false','pictures':'false','update': 'true', 'more': 'true', 'text': 0} %}
                        {% include 'AMRFPublicRooterBundle::components/resumeProject.html.twig' with options %}
                    </div>
                </div>
                <div class="swiper-slide">
                    <h3>Mes projets envoyés</h3>
                    <div class="jumbotron">
                        {% set options = {'thema':'false','pictures':'false','update': 'true', 'more': 'true', 'text': 0} %}
                        {% include 'AMRFPublicRooterBundle::components/resumeProject.html.twig' with options %}
                    </div>
                </div>
                <div class="swiper-slide">
                    <h3>Mes projets en ligne</h3>
                    <div class="jumbotron">
                        {% set options = {'thema':'false','pictures':'false','update': 'true', 'more': 'true', 'text': 0} %}
                        {% include 'AMRFPublicRooterBundle::components/resumeProject.html.twig' with options %}
                    </div>
                </div>
            </div>{#swiper wrapper#}
            <div class="swiper-button-next"></div>
            <div class="swiper-button-prev"></div>
        </div>{#swiper container#}
    </div>
{% endblock %}

