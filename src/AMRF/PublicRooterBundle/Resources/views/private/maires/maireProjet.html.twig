{% extends 'AMRFPublicRooterBundle::base.html.twig' %}
{% block title %}Mes projets{% endblock %}
{% block navbar %}
    {% set options = {'status':1} %}
    {% include 'AMRFPublicRooterBundle::components/navbar.html.twig' with options %}
{% endblock %}
{% block body %}
    <h2>MES FICHES PROJETS</h2>
    <div class="row tabPannel">
        <div class="hidden-xs">
            <ul class="list-inline text-center" role="tablist">
                <li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab"
                                                          data-toggle="tab">Mes
                        Projets en Attente</a></li>
                <li role="presentation"><a href="#projet" aria-controls="projet" role="tab" data-toggle="tab">Mes
                        Projets Publiés</a>
                </li>
            </ul>
        </div>
        <!-- Tab panes -->
        <div class="tab-content">
            <div role="tabpanel" class="tab-pane active" id="home">
                <div class="row hidden-sm hidden-md hidden-lg">
                    <div class="form-group col-xs-12 text-right">
                        <a href="#projet" aria-controls="projet" role="tab" data-toggle="tab">
                            <div type="button" class="btn">
                                Finalisés <i class=" fa fa-angle-right" aria-hidden="true"></i>
                            </div>
                        </a>
                    </div>
                </div>
                <h3>Mes projets en cours de saisie</h3>
                <div class="jumbotron">
                    {% set options = {'thema':'false','pictures':'false','update': 'true', 'more': 'true', 'id': 1, 'text': 0} %}
                    {% include 'AMRFPublicRooterBundle::components/resumeProject.html.twig' with options %}
                </div>
            </div>
            <div role="tabpanel" class="tab-pane" id="projet">
                <div class="row hidden-sm hidden-md hidden-lg">
                    <div class="form-group col-xs-12 text-left">
                        <a href="#home" aria-controls="home" role="tab" data-toggle="tab">
                            <div type="button" class="btn">
                                <i class=" fa fa-angle-left" aria-hidden="true"></i> En cours de saisie
                            </div>
                        </a>
                    </div>
                    <div>
                    </div>
                    <div class="form-group col-xs-6 text-right">
                    </div>
                </div>
                <h3>Mes projets Publiés</h3>
                <div class="jumbotron">
                    {% set options = {'thema':'false','pictures':'false','update': 'true', 'more': 'true'} %}
                    {% include 'AMRFPublicRooterBundle::components/resumeProject.html.twig' with options %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

