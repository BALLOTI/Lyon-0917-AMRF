{% extends 'AMRFPublicRooterBundle::base.html.twig' %}
{% block title %}Mon profil{% endblock %}
{% block navbar %}
    {% set options = {'status':2} %}
    {% include 'AMRFPublicRooterBundle::components/navbar.html.twig' with options %}
{% endblock %}
{% block body %}

    <h2>Mon profil</h2>
    <div class="row tabPannel">
        <form action="">
            <ul class="list-inline text-center" role="tablist">
                <li role="presentation" class="active">
                    <a href="#profil" aria-controls="profil" role="tab" data-toggle="tab">Mon Profil</a>
                </li>
                <li role="presentation">
                    <a href="#settings" aria-controls="settings" role="tab" data-toggle="tab">Mot de Passe</a>
                </li>
            </ul>

            <div class="tab-content">
                <div role="tabpanel" class="tab-pane active" id="profil">
                    <div class="star">Le symbole * indique que cette information est nécessaire.</div>
                    <h3>Mon profil</h3>
                    <div class="col-lg-6 col-sm-6">
                        <div class="form-group">
                            <label for="lastName">Nom *</label>
                            <input id="lastName" type="text" class="form-control">
                        </div>
                    </div>
                    <div class="col-lg-6 col-sm-6">
                        <div class="form-group">
                            <label for="firstName">Prénom *</label>
                            <input id="firstName" type="text" class="form-control">
                        </div>
                    </div>
                    <div class="col-lg-6 col-sm-6">
                        <div class="form-group">
                            <label for="societe">Organisme *</label>
                            <input id="societe" type="text" class="form-control">
                        </div>
                    </div>
                    <div class="col-lg-6 col-sm-6">
                        <div class="form-group">
                            <label for="fonction">Fonction *</label>
                            <input id="fonction" type="text" class="form-control">
                        </div>
                    </div>
                    <div class="col-lg-6 col-sm-6">
                        <div class="form-group">
                            <label for="tel">Téléphone *</label>
                            <input id="tel" type="tel" class="form-control">
                        </div>
                    </div>
                    <div class="col-lg-6 col-sm-6">
                        <div class="form-group">
                            <label for="email">Email *</label>
                            <input id="email" type="email" class="form-control">
                        </div>
                    </div>
                </div>

                <div role="tabpanel" class="tab-pane" id="settings">
                    <div class="star">Le symbole * indique que cette information est nécessaire.</div>
                    <h3>Mon mot de passe</h3>
                    <div class="col-lg-4 col-sm-4">
                        <div class="form-group">
                            <label for="oldpsw">Ancien mot de passe *</label>
                            <input id="oldpsw" type="password" class="form-control" data-error="wrong"
                                   data-success="right">
                        </div>
                    </div>
                    <div class="col-lg-4 col-sm-4">
                        <div class="form-group">
                            <label for="password">Nouveau mot de passe *</label>
                            <input id="password" type="password" class="form-control" data-error="wrong"
                                   data-success="right">
                        </div>
                    </div>
                    <div class="col-lg-4 col-sm-4">
                        <div class="form-group">
                            <label for="password">Confirmer le nouveau mot de passe *</label>
                            <input id="password" type="password" class="form-control" data-error="wrong"
                                   data-success="right">
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-12 col-md-12 text-center">
                <button class="btn" type="submit">Sauvegarder</button>
            </div>
        </form>
    </div>

{% endblock %}